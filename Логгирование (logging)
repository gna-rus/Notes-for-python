import logging

logging.basicConfig(level=logging.NOTSET)
logger = logging.getLogger(__name__)
# level=logging.NOTSET - определяет уровень логирования от которого будет выводиться информация. 
# То есть если выставить level=logging.WARNING то будет выведена только logger.warning(), logger.error() и logger.critical,
# при этом  logger.debug() и logger.info() - будет проигнорированы

def log_all():
    logger.debug('Очень подробная отладочная информация. \nЗаменяем множество "принтов"')
    logger.info('Немного информации о работе кода')
    logger.warning('Внимание! Надвигается буря!')
    logger.error('Поймали ошибку. Дальше только неизвестность')
    logger.critical('На этом всё')

if __name__ == "__main__":
    log_all()
